<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.harshith.hw9">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutMeActivity"
            android:label="@string/title_activity_about_me"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".CommitteeInfoActivity">
        </activity>
        <activity
            android:name=".LegislatorInfoActivity"
            android:label="@string/title_activity_legislator_info"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".BillInfoActivity"
            android:label="@string/title_activity_bill_info"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>